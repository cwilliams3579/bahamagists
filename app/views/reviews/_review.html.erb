<div class="container">

<p><%= review.description  %></p>
    <% if can? :update, review %>
      <%= link_to "", edit_job_review_path(@job),
            class: "fa fa-pencil fa-lg grey-text waves-effect waves-light" %>
    <% end %>
    &nbsp; &nbsp;
    <%= if can? :destroy, review %>
    <%= link_to "", job_path(@job), method: :delete, data: { confirm: "Are you sure you want to delete this job?" }, class: "fa fa-trash fa-lg grey-text" %>
    <% end %>
    <hr>

  <% end %>
</div><br />

  <script type="text/javascript">
  $('.review-rating').raty({
    path: 'https://s3.amazonaws.com/yelp-clone-rails/stars',
    readOnly: true,
    score: function() {
      return $(this).attr('data-score')
    }
  });
</script>