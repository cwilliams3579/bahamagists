<div class="container">
  <div class="review-rating" data-score=<%= review.rating %>></div>
<p><%= review.description  %></p>
  <% if user_signed_in?  %>
    <% if review.user_id == current_user.id %>
      <%= link_to "", new_job_review_path(@job), 
            class: "fa fa-pencil fa-2x grey-text waves-effect waves-light" %>&nbsp; &nbsp;
      <%= link_to "", job_path(@job), method: :delete,
            data: { confirm: "Are you sure you want to delete this job?" }, 
            class: "fa fa-trash fa-2x grey-text" %>
    <% end %>

  <% end %>
</div><br />

  <script type="text/javascript">
  $('.review-rating').raty({
    path: 'https://s3.amazonaws.com/yelp-clone-rails/stars',
    readOnly: true,
    score: function() {
      return $(this).attr('data-score')
    }
  });
</script>