<main>
  <div class="container mx-auto">
  <div class="card card-form">
    <div class="card-block">
      <!--Header-->
       <div class="form-header">
          <h2>Forgot your password?</h2>
       </div>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= devise_error_messages! %>
        <div class="md-form">
          <i class="fa fa-envelope prefix white-text"></i>
          <%= f.text_field :email, required: false, autofocus: true, placeholder: "johndoe@gmail.com", class: "form-control white-text" %>
          <label for="email">Email</label>
        </div>

        <div class="md-form">
          <%= f.button "Reset Password", class: "btn btn-block btn-lg btn-rounded btn-outline-white ", data: { disable_with: "<i class='fa fa-spinner fa-5x fa-spin'></i> Processing..."} %>
        </div>
      <% end %>
    </div>
  </div>
</div>
</main>
<%= render "devise/shared/links" %>
