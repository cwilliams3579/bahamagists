<% content_for :title do %>Sign Up<% end %>
<main>
  <div class="container">
  <div class="card card-form">
    <div class="card-block">
      <div class="form-header">
        <h3>
           Sign Up
         </h3>
      </div>
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => 'form'}) do |f| %>
        <%= devise_error_messages! %>
        <div class="md-form">
          <i class="fa fa-user prefix white-text"></i>
          <%= f.text_field :first_name, :autofocus => true, placeholder: "John", class: 'form-control text-white' %>
          <label for="first_name">First Name</label>
        </div>
        <div class="md-form">
          <i class="fa fa-user prefix white-text"></i>
          <%= f.text_field :last_name, placeholder: "Doe", class: 'form-control text-white' %>
          <label for="last_name">Last Name</label>
        </div>
        <div class="md-form">
          <i class="fa fa-envelope prefix white-text"></i>
          <%= f.email_field :email, placeholder: "johndoe@gmail.com", class: 'form-control text-white' %>
          <label for="email">Email</label>
        </div>
        <div class="md-form">
          <i class="fa fa-lock prefix white-text"></i>
          <%= f.password_field :password, placeholder: "Create Password", class: 'form-control text-white' %>
          <label for="password">Password</label>
        </div>
        <div class="md-form">
          <i class="fa fa-lock prefix white-text"></i>
          <%= f.password_field :password_confirmation, placeholder: "Confirm password", class: 'form-control text-white' %>
          <label for="password_confirmation">Confirm Password</label>
        </div>
        <div class="md-form">
          <%= f.button "Sign up", class: "btn btn-block btn-lg btn-rounded btn-outline-white ", data: { disable_with: "<i class='fa fa-spinner fa-5x fa-spin'></i> Processing..."} %>
        </div>
      <% end %>
        <p class="white-text">Already have an account? <i class="fa fa-sign-in faa-horizontal animated white-text" aria-hidden="true"></i>
 <a href="/users/sign_in" class="white-text">Sign In</a></p>
    </div>
  </div>
</div>
<br><br>

</main>
<%= link_to '', :back, class: "fa fa-hand-o-left fa-2x faa-horizontal animated info-text" %>

