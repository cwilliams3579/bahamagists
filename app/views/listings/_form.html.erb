<div class="container">
  <div class="card card-form p-top">
    <div class="card-block">
      <div class="form-header">
          <i class="fa fa-home fa-2x" aria-hidden="true"></i>
      </div>
      <%= form_for(@listing, multipart: true) do |f| %>
        <% if listing.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(listing.errors.count, "error") %> prohibited this listing from being saved:</h2>

            <ul>
            <% listing.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
        <div class="md-form">
          <i class="fa fa-camera-retro fa-2x prefix white-text"></i>
          <%= f.file_field :images, multiple: true %>
        </div> <br>
        <div class="md-form">
          <i class="fa fa-tag prefix white-text"></i>
          <%= f.text_field :title, class: "form-control white-text" %>
          <label for="title">Title</label>
        </div>
        <div class="md-form">
          <i class="fa fa-money prefix white-text"></i>
          <%= f.text_field :price, class: "form-control white-text" %>
          <label for="price">Price</label>
        </div>
        <div class="md-form">
          <i class="fa fa-map-marker prefix white-text"></i>
          <%= f.text_field :address, class: "form-control white-text" %>
          <label for="address">Address</label>
        </div>
        <div class="md-form">
          <i class="fa fa-pencil prefix white-text"></i>
          <%= f.text_area :description, class: "md-textarea white-text" %>
          <label for="description">Description</label>
        </div>
        <div class="md-form">
          <%= f.button class: "btn btn-block btn-lg btn-rounded btn-outline-white", data: { disable_with: "<i class='fa fa-refresh fa-5x fa-spin'></i>"} %>
        </div>
      <% end %>
    </div>
  </div>
</div>