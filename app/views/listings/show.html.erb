<div class="container p-top">
  <div id="carousel-thumb" class="carousel slide carousel-fade carousel-thumbnails" data-ride="carousel">
      <div class="carousel-inner" role="listbox">
      <% Listing.last do |listing| %>
        <% listing.images.each do |image| %>
            <div class="carousel-item active">
                <%= image_tag(image.url, class: "img-fluid") %>
            </div>

            <% end %>
        <% end %>
      </div>
      <a class="carousel-control-prev" href="#carousel-thumb" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carousel-thumb" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
      </a>
      <ol class="carousel-indicators">
          <li data-target="#carousel-thumb" data-slide-to="0" class="active"> <%#= image_tag(@listing.images.url, class: "img-fluid") %></li>
          <li data-target="#carousel-thumb" data-slide-to="1"><%#= image_tag(image.url, class: "img-fluid") %></li>
          <li data-target="#carousel-thumb" data-slide-to="2"><%#= image_tag(image.url, class: "img-fluid") %></li>
      </ol>
  </div>
</div>
<section class="section mb-4">
  <h1 class="section-heading"><%= @listing.title.titleize %></h1>
  <p class="section-description"><%= simple_format(@listing.description) %></p>
  <div class="row">
      <div class="col-md-12">
          <div class="mdb-lightbox no-margin" data-pswp-uid="1">
            <% @listings.each do |listing| %>
              <% listing.images.each do |image| %>
                <figure class="col-md-4 hm-zoom hoverable">
                    <%= image_tag(image.url, class: "img-fluid list-img") %>
                </figure>
              <% end %>
            <% end %>
          </div>
      </div>
  </div>
</section>
<%= link_to 'Edit', edit_listing_path(@listing) %> |
<%= link_to 'Back', listings_path %>
