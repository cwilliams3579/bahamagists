<% content_for :title do %>Gist<% end %>
<div class="container p-top-5x">
    <div class="row mt-1">
        <div class="col-md-12">
            <div id="carousel-example-3" class="carousel slide carousel-fade z-depth-1-half" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carousel-example-3" data-slide-to="0" class=""></li>
                    <li data-target="#carousel-example-3" data-slide-to="1" class=""></li>
                    <li data-target="#carousel-example-3" data-slide-to="2" class="active"></li>
                </ol>
                <div class="carousel-inner" role="listbox">
                    <div class="carousel-item">
                        <div class="view hm-black-slight">
                            <img src="https://mdbootstrap.com/img/Photos/Slides/img%20(57).jpg" class="img-fluid" alt="">
                            <div class="full-bg-img">
                            </div>
                        </div>
                        <div class="carousel-caption caption-2">
                            <div class="animated fadeInDown">
                                <h2 class="h2-responsive"> New passion - classic film photography</h2>
                            </div>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <div class="view hm-black-slight">
                            <img src="https://mdbootstrap.com/img/Photos/Slides/img%20%2892%29.jpg" class="img-fluid" alt="">
                            <div class="full-bg-img">
                            </div>
                        </div>
                        <div class="carousel-caption caption-2">
                            <div class="animated fadeInDown">
                                <h2 class="h2-responsive">My weekend in the nature</h2>
                            </div>
                        </div>
                    </div>
                    <div class="carousel-item active">
                        <div class="view hm-black-slight">
                            <img src="https://mdbootstrap.com/img/Photos/Slides/img%20(119).jpg" class="img-fluid" alt="">
                            <div class="full-bg-img">
                            </div>
                        </div>
                        <div class="carousel-caption caption-2">
                            <div class="animated fadeInDown">
                                <h2 class="h2-responsive">Tatras - the best choice for holiday</h2>
                            </div>
                        </div>
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carousel-example-1z" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carousel-example-1z" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
    <div class="divider-new wow fadeIn" style="visibility: visible; animation-name: fadeIn;">
        <h2>Gists</h2>
    </div>
    <section class="section">
        <div class="row">
            <% @posts.each do |post| %>
                <div class="col-md-6 mb-1">
                    <h6 class="text-muted mb-1"><%= post.created_at.strftime("%B %d, %Y") %></h6>
                    <h4 class="font-up mb-1"><a href="#!" class="text-muted font-thin"><%= link_to post.title, post_path(post), class: "text-muted font-thin" %></a></h4>
                    <div class=" hm-white-slight mb-1-half">
                        <% if post.image? %>
                            <%= link_to image_tag(post.image_url), post_path(post) %>
                        <% else %>
                            <img src="https://mdbootstrap.com/img/Photos/Horizontal/Nature/4-col/img%20%28129%29.jpg" class="img-fluid" alt="Post Image">
                        <% end %>
                        <div class="mask waves-effect waves-light"></div>
                    </div> <br>
                    <p class="text-muted font-thin"><%= truncate(post.content, escape: false, length: 350) %></p>
                    <div class="text-center">
                        <%= link_to 'Read More', post_path(post), class: "btn btn-rounded info-color btn-outline-white" %>
                    </div>
                    <div class="text-center blog-social-icons mt-1 font-thin">
                        <a class="icons-sm fb-ic"><i class="fa fa-facebook"></i><span class="text-muted"> 235</span></a>
                        <a class="icons-sm tw-ic"><i class="fa fa-twitter"></i><span class="text-muted"> 47</span></a>
                        <a class="icons-sm comm-ic"><i class="fa fa-comments"></i><span class="text-muted"> <%= post.comments.count %></span></a>
                    </div>
                    <div class="post-border pt-1"></div>
                </div>
            <% end %>
        </div>
    </section>
    <nav>
        <ul class="pagination pg-darkgrey flex-center mt-3 mb-5">
            <li class="center">
                <%= will_paginate @posts, renderer: BootstrapPagination::Rails, class: "pg" %>
            </li>
        </ul>
    </nav>
    <br>
    <div class="center">
        <%= link_to 'New Post', new_post_path, class: "btn btn-outline-white info-color btn-rounded z-depth-5" %>
    </div>
</div>

