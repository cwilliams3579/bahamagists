<div class="container p-top">
  <div class="card card-form">
    <div class="card-block">
      <div class="form-header">
        <i class="fa fa-book fa-2x"></i>
      </div>
        <%= form_for @post, html: { multipart: true } do |f| %>
          <% if post.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

              <ul>
              <% post.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>

          <div class="md-form">
            <%= image_tag(@post.image_url) if @post.image? %><br>
            <div class="text-center">
              <i class="fa fa-camera-retro prefix white-text"></i>
              <%= f.file_field :image %>
            </div>
            <div class="f-img">
              <%= f.hidden_field :image_cache %>
            </div>
          </div>

          <div class="md-form">
          <i class="fa fa-tag prefix white-text" aria-hidden="true"></i>
            <%= f.text_field :title, id: :post_title, autofocus: true, class: "form-control white-text" %>
            <label for="title">Title</label>
          </div>

          <div class="md-form">
            <i class="fa fa-pencil prefix white-text" aria-hidden="true"></i>
            <%= f.text_area :content, id: :post_content, class: "md-textarea white-text" %>
            <label for="content">Description</label>
          </div>

          <div class="md-form">
            <%= f.button class: "btn btn-block btn-lg btn-rounded btn-outline-white", data: { disable_with: "<i class='fa fa-spinner fa-5x fa-spin'></i> Processing..."} %>
          </div>
        <% end %>

    </div>
  </div>
</div>