<div class="container p-top-2x">
  <div class="card ">
    <div class="card-block">
      <div class="form-header">
        <div class="h3-responsive">
          <%= @category.name.titleize %>
          <% if user_signed_in? || current_user.admin? %>
            <%= link_to '', edit_category_path(@category), class: "fa fa-pencil white-text pull-right" %>
          <% end %> 
        </div>
      </div>
    <table class="table">
      <thead>
 
      </thead>
      <tbody>
        <% Job.all.each do |job| %>
          <tr>
            <th scope="row"></th>
              <td>
                  <%= link_to job.title, job_path(job) %>
              </td>
              <td>
              <%= link_to '', edit_job_path(job), class: "fa fa-pencil info-text" %>
              <%= link_to '', job, method: :delete, data: { confirm: 'Are you sure?' }, class: "fa fa-trash text-danger" %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%= link_to '', categories_path, class: "fa fa-hand-o-left fa-2x faa faa-horizontal animated info-text" %>
